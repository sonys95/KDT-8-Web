  <body>
    <h1><%= title %></h1>

    <h4>GET요청</h4>
    <form action="/getForm" method="get">
      <div>
        이름<input type="text" placeholder="name" name="name" required />
      </div>

      <fieldset>
        <legend>성별</legend>
        <input type="radio" name="gender" value="male" id="male" /> 남자
        <input type="radio" name="gender" value="female" id="female" /> 여자
      </fieldset>
      <br />
      <fieldset>
        <legend>생년월일</legend>

        <select name="year" id="year">
          <option value="1995">1995</option>
          <option value="2020">2020</option>
          <option value="2025">2025</option>
        </select>
        <select name="month" id="month">
          <option value="1">1</option>
          <option value="2">2</option>
          <option value="3">3</option>
        </select>
        <select name="date" id="date">
          <option value="10">10</option>
          <option value="20">20</option>
          <option value="30">30</option>
        </select>
      </fieldset>

      <fieldset>
        <legend>관심사</legend>
        <input type="checkbox" name="interest" id="travel" value="여행" /><label
          for="travel"
          >여행</label
        >
        <input
          type="checkbox"
          name="interest"
          id="passion"
          value="패션"
        /><label for="passion">패션</label>
        <input type="checkbox" name="interest" id="food" value="음식" /><label
          for="food"
          >음식</label
        >
      </fieldset>
      <button type="submit">제출</button>
    </form>
