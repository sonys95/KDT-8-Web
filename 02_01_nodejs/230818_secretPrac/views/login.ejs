<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <fieldset>
      <legend>로그인하기</legend>
      <form name="form_login">
        <label for="id">아이디</label>
        <input type="text" id="id" /><br />
        <label for="id">비밀번호</label>
        <input type="text" pw="pw" />
        <button type="button" onclick="login()">로그인</button>
      </form>
    </fieldset>
  </body>
  <script>
    function login() {
      const form = document.forms["form_login"];
      axios({
        merthod: "POST",
        url: "/login",
        data: {
          id: form.id.value,
          pw: form.pw.value,
        },
      }).then((res) => {
        if (res.data.result) {
          alert("로그인 성공");
        } else {
          form.reset();
        }
      });
    }
  </script>
</html>
